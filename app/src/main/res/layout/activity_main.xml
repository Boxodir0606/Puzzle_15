<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFE7DA"
    android:fitsSystemWindows="true"
    tools:context="uz.boxodir.puzzle_15.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/step"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:tint="#E18630"
                android:textStyle="bold"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal|bottom"
                android:text="120"
                android:fontFamily="@font/asf"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/volue"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:layout_marginBottom="26dp"
                android:layout_gravity="center"
                android:src="@drawable/sound" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                android:src="@drawable/timer"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asf"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/button1"
            style="@style/MyButton"
            android:clickable="true"
            android:focusable="true"
            tools:text="1" />

        <TextView
            android:id="@+id/button2"
            style="@style/MyButton"
            android:layout_toEndOf="@id/button1"
            android:clickable="true"
            android:focusable="true"
            tools:text="2" />

        <TextView
            android:id="@+id/button3"
            style="@style/MyButton"
            android:layout_toEndOf="@id/button2"
            android:clickable="true"
            android:focusable="true"
            tools:text="3" />

        <TextView
            android:id="@+id/button4"
            style="@style/MyButton"
            android:layout_marginStart="-94dp"
            android:layout_toEndOf="@id/button3"
            android:clickable="true"
            android:focusable="true"
            tools:text="4" />

        <TextView
            android:id="@+id/button5"
            style="@style/MyButton"
            android:layout_below="@id/button1"
            android:clickable="true"
            android:focusable="true"
            tools:text="5" />

        <TextView
            android:id="@+id/button6"
            style="@style/MyButton"
            android:layout_below="@id/button2"
            android:layout_toEndOf="@id/button5"
            android:clickable="true"
            android:focusable="true"
            tools:text="6" />

        <TextView
            android:id="@+id/button7"
            style="@style/MyButton"
            android:layout_below="@id/button3"
            android:layout_toEndOf="@id/button6"
            android:clickable="true"
            android:focusable="true"
            tools:text="7" />

        <TextView
            android:id="@+id/button8"
            style="@style/MyButton"
            android:layout_below="@id/button4"
            android:layout_toEndOf="@id/button7"
            android:clickable="true"
            android:focusable="true"
            tools:text="8" />

        <TextView
            android:id="@+id/button9"
            style="@style/MyButton"
            android:layout_below="@id/button5"
            android:clickable="true"
            android:focusable="true"
            tools:text="9" />

        <TextView
            android:id="@+id/button10"
            style="@style/MyButton"
            android:layout_below="@id/button6"
            android:layout_toEndOf="@id/button9"
            android:clickable="true"
            android:focusable="true"
            tools:text="10" />

        <TextView
            android:id="@+id/button11"
            style="@style/MyButton"
            android:layout_below="@id/button7"
            android:layout_toEndOf="@id/button10"
            android:clickable="true"
            android:focusable="true"
            tools:text="11" />

        <TextView
            android:id="@+id/button12"
            style="@style/MyButton"
            android:layout_below="@id/button8"
            android:layout_toEndOf="@id/button11"
            android:clickable="true"
            android:focusable="true"
            tools:text="12" />

        <TextView
            android:id="@+id/button13"
            style="@style/MyButton"
            android:layout_below="@id/button9"
            android:layout_marginTop="6dp"
            tools:text="13" />

        <TextView
            android:id="@+id/button14"
            style="@style/MyButton"
            android:layout_below="@id/button10"
            android:layout_toEndOf="@id/button13"
            android:clickable="true"
            android:focusable="true"
            tools:text="14" />

        <TextView
            android:id="@+id/button15"
            style="@style/MyButton"
            android:layout_below="@id/button11"
            android:layout_toEndOf="@id/button14"
            android:clickable="true"
            android:focusable="true"
            tools:text="15" />

        <TextView
            android:id="@+id/button16"
            style="@style/MyButton"
            android:layout_below="@id/button12"
            android:layout_toEndOf="@id/button15"
            android:clickable="true"
            android:focusable="true"
            tools:text="16" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_item"
            android:onClick="finish"
            android:text="Finish"
            android:textAllCaps="false"
            android:fontFamily="@font/asf"
            android:backgroundTint="#11C9F7"
            android:textColor="#fff"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restart"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25sp"
            android:layout_weight="1"
            android:background="@drawable/btn_item"
            android:backgroundTint="#E18630"
            android:text="Restart"
            android:textAllCaps="false"
            android:fontFamily="@font/asf"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>