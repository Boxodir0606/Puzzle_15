<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE7DA"
    android:orientation="horizontal"
    tools:context="uz.boxodir.puzzle_15.MainActivity">


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:src="@drawable/step"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:tint="#E18630"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/asf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.297" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_height="0dp">


            <ImageView
                android:id="@+id/textView7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/timer"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/asf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.177" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="337dp"
        android:layout_height="334dp"
        android:layout_gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/button1"
            style="@style/MyButton"
            android:clickable="true"
            android:focusable="true"
            tools:text="1" />

        <TextView
            android:id="@+id/button2"
            style="@style/MyButton"
            android:layout_toEndOf="@id/button1"
            android:clickable="true"
            android:focusable="true"
            tools:text="2" />

        <TextView
            android:id="@+id/button3"
            style="@style/MyButton"
            android:layout_toEndOf="@id/button2"
            android:clickable="true"
            android:focusable="true"
            tools:text="3" />

        <TextView
            android:id="@+id/button4"
            style="@style/MyButton"
            android:layout_marginStart="-94dp"
            android:layout_toEndOf="@id/button3"
            android:clickable="true"
            android:focusable="true"
            tools:text="4" />

        <TextView
            android:id="@+id/button5"
            style="@style/MyButton"
            android:layout_below="@id/button1"
            android:clickable="true"
            android:focusable="true"
            tools:text="5" />

        <TextView
            android:id="@+id/button6"
            style="@style/MyButton"
            android:layout_below="@id/button2"
            android:layout_toEndOf="@id/button5"
            android:clickable="true"
            android:focusable="true"
            tools:text="6" />

        <TextView
            android:id="@+id/button7"
            style="@style/MyButton"
            android:layout_below="@id/button3"
            android:layout_toEndOf="@id/button6"
            android:clickable="true"
            android:focusable="true"
            tools:text="7" />

        <TextView
            android:id="@+id/button8"
            style="@style/MyButton"
            android:layout_below="@id/button4"
            android:layout_toEndOf="@id/button7"
            android:clickable="true"
            android:focusable="true"
            tools:text="8" />

        <TextView
            android:id="@+id/button9"
            style="@style/MyButton"
            android:layout_below="@id/button5"
            android:clickable="true"
            android:focusable="true"
            tools:text="9" />

        <TextView
            android:id="@+id/button10"
            style="@style/MyButton"
            android:layout_below="@id/button6"
            android:layout_toEndOf="@id/button9"
            android:clickable="true"
            android:focusable="true"
            tools:text="10" />

        <TextView
            android:id="@+id/button11"
            style="@style/MyButton"
            android:layout_below="@id/button7"
            android:layout_toEndOf="@id/button10"
            android:clickable="true"
            android:focusable="true"
            tools:text="11" />

        <TextView
            android:id="@+id/button12"
            style="@style/MyButton"
            android:layout_below="@id/button8"
            android:layout_toEndOf="@id/button11"
            android:clickable="true"
            android:focusable="true"
            tools:text="12" />

        <TextView
            android:id="@+id/button13"
            style="@style/MyButton"
            android:layout_below="@id/button9"
            android:layout_marginTop="6dp"
            tools:text="13" />

        <TextView
            android:id="@+id/button14"
            style="@style/MyButton"
            android:layout_below="@id/button10"
            android:layout_toEndOf="@id/button13"
            android:clickable="true"
            android:focusable="true"
            tools:text="14" />

        <TextView
            android:id="@+id/button15"
            style="@style/MyButton"
            android:layout_below="@id/button11"
            android:layout_toEndOf="@id/button14"
            android:clickable="true"
            android:focusable="true"
            tools:text="15" />

        <TextView
            android:id="@+id/button16"
            style="@style/MyButton"
            android:layout_below="@id/button12"
            android:layout_toEndOf="@id/button15"
            android:clickable="true"
            android:focusable="true"
            tools:text="16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finish"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_item"
                android:backgroundTint="#11C9F7"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="finish"
                android:fontFamily="@font/asf"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/restart"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_item"
                android:backgroundTint="#E18630"
                android:text="restart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/asf"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/volue"
                android:layout_width="55dp"
                android:padding="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:src="@drawable/sound"/>

        </LinearLayout>





    </LinearLayout>


</LinearLayout>
