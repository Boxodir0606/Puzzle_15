<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/nunito_bolditalic"
        android:gravity="center"
        android:text="Welcome to Puzzle \n15 game"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/solution"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="55dp"
        android:drawableStart="@drawable/baseline_play_arrow_24"
        android:paddingStart="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/drawable_group"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="Play"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_info"
        android:drawableStart="@drawable/baseline_info_24"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="10dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/drawable_group"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="INfo"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_shareProject"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:background="@drawable/drawable_group"
        android:fontFamily="@font/nunito_bolditalic"
        android:text="Share"
        android:drawableStart="@drawable/baseline_share_24"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>